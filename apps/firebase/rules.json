{
  "rules": {
    ".read": "true",
    ".write": "auth.uid != null",
    "v3": {
      "shared-tables": {
        "$channel_id": {
          "counters": {
            "$table_name": {
              ".validate": "newData.isNumber() && newData.val() == (data.val() == null ? 0 : data.val()) + 1"
            }
          },
          "tables": {
            "$table_name": {
              "target_record_id": {
                ".validate": "newData.isString()"
              },
              "row_count": {
                ".validate": "newData.isNumber() && newData.val() < 1000"
              }
            }
          }
        }
      }
    }
  }
}
